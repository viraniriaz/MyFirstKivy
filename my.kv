

<MyGrid>
    BoxLayout:
        orientation: 'vertical'
        size: root.width,root.height
        TextInput:
            id:calc_input
            text: '0'
            halign: 'right'
            font_size: 65
            size_hint: (1,0.15)
        GridLayout:
            cols: 4
            rows: 5
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "%"

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "<<"
                on_press:root.back()
            Button:
                id:c
                size_hint: (.2,.2)
                font_size: 32
                text: "C"
                on_press: root.press()
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "/"
                on_press: root.math_sign('/')
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "7"
                background_color: (1,0,0,1)
                on_press: root.pressed(7)
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "8"
                background_color: (1,0,0,1)
                on_press: root.pressed(8)
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "9"
                background_color: (1,0,0,1)
                on_press: root.pressed(9)
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "x"
                on_press: root.math_sign('*')
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "4"
                background_color: (1,0,0,1)
                on_press: root.pressed(4)
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "5"
                background_color: (1,0,0,1)
                on_press: root.pressed(5)
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "6"
                background_color: (1,0,0,1)
                on_press: root.pressed(6)

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "-"
                on_press: root.math_sign('-')
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "1"
                background_color: (1,0,0,1)
                on_press: root.pressed(1)
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "2"
                background_color: (1,0,0,1)
                on_press: root.pressed(2)
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "3"
                background_color: (1,0,0,1)
                on_press: root.pressed(3)
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "+"
                on_press: root.math_sign("+")
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "+/-"
                on_press: root.on()
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "0"
                on_press: root.pressed(0)
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "."
                on_press: root.dot()
            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "="
                on_press:root.equals()






